rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Users collection
    match /users/{userId} {
      // Anyone authenticated can view profiles for search/community
      allow read: if isAuthenticated();
      // Only the user can create/update their own profile
      allow create, update: if isOwner(userId);
    }

    // Notes collection
    match /notes/{noteId} {
      // Owners can read their notes; public notes are readable by anyone
      allow read: if isOwner(resource.data.userId) || resource.data.isPublic == true;
      
      // Any authenticated user can create a note
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      
      // Update logic
      allow update: if isOwner(resource.data.userId) || 
                   (resource.data.isPublic == true && 
                    isAuthenticated() && 
                    // Allow specific social field updates for public notes
                    request.resource.data.diff(resource.data).affectedKeys()
                      .hasOnly(['likes', 'dislikes', 'views', 'commentCount']));
      
      // Only owner can delete
      allow delete: if isOwner(resource.data.userId);

      // Comments subcollection
      match /comments/{commentId} {
        // Readable if the parent note is public
        allow read: if get(/databases/$(database)/documents/notes/$(noteId)).data.isPublic == true;
        // Authenticated users can comment
        allow create: if isAuthenticated() && request.resource.data.uid == request.auth.uid;
      }
    }

    // Chats collection
    match /chats/{chatId} {
      // Only participants can read/write chats
      allow read, write: if isAuthenticated() && request.auth.uid in resource.data.participants;
      // Allow creation if the creator is one of the participants
      allow create: if isAuthenticated() && request.auth.uid in request.resource.data.participants;

      // Messages subcollection
      match /messages/{messageId} {
        // Only participants of the parent chat can read/write messages
        allow read, write: if isAuthenticated() && request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants;
      }
    }

    // Notifications collection
    match /notifications/{notificationId} {
      // Recipient can read and delete their notifications
      allow read, delete: if isOwner(resource.data.recipientId);
      // Any authenticated user can create a notification (e.g., on follow)
      allow create: if isAuthenticated() && request.resource.data.senderId == request.auth.uid;
    }
  }
}
